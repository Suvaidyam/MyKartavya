{
    "doctype": "DocType",
    "name": "Activity",
    "module": "Mykartavya",
    "custom": 1,
    "autoname": "format:ACT-{####}",
    "naming_rule": "Expression",
    "allow_rename": 0,
    "show_title_field_in_link": 1,
    "title_field": "title",
    "search_fields": "title,activity_description",
    "fields": [
        {
            "fieldname": "need_certificate",
            "label": "Need Certificate",
            "fieldtype": "Select",
            "options": "Yes\nNo",
            "reqd": 1
        },
        {
            "fieldname": "title",
            "label": "Title",
            "fieldtype": "Data",
            "length": 255,
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "activity_description",
            "label": "Activity Description",
            "fieldtype": "Text Editor",
            "reqd": 1
        },
        {
            "fieldname": "activity_published_date_starts",
            "label": "Activity Starts on Published Date",
            "fieldtype": "Check",
            "reqd": 1
        },
        {
            "fieldname": "publish_date",
            "label": "Activity Publish Date",
            "fieldtype": "Datetime",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "activation_deadline",
            "label": "Activation Deadline",
            "fieldtype": "Datetime",
            "reqd": 1
        },
        {
            "fieldname": "start_date",
            "label": "Start Date",
            "fieldtype": "Datetime",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "end_date",
            "label": "End Date",
            "fieldtype": "Datetime",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "reporting_deadline",
            "label": "Reporting Deadline",
            "fieldtype": "Datetime",
            "reqd": 1
        },
        {
            "fieldname": "auto_approve_volunteers",
            "label": "Auto Approve Volunteers",
            "fieldtype": "Check",
            "default": "0"
        },
        {
            "fieldname": "is_team_activity",
            "label": "Team Activity",
            "fieldtype": "Check",
            "default": "0"
        },
        {
            "fieldname": "require_feedback_images",
            "label": "Required Feedback Images",
            "fieldtype": "Check",
            "default": "0"
        },
        {
            "fieldname": "category",
            "label": "Category",
            "fieldtype": "Link",
            "options": "Category",
            "reqd": 1,
            "in_list_view": 1
        },
        {
            "fieldname": "is_featured",
            "label": "Featured Activity",
            "fieldtype": "Select",
            "options": "Yes\nNo",
            "reqd": 1
        },
        {
            "fieldname": "is_global",
            "label": "Global Activity",
            "fieldtype": "Check",
            "default": "0"
        },
        {
            "fieldname": "value_type",
            "label": "Value Type",
            "fieldtype": "Select",
            "options": "General\nSkills"
        },
        {
            "fieldname": "work_value_points",
            "label": "Work Value Points",
            "fieldtype": "Int",
            "reqd": 1,
            "default": "0"
        },
        {
            "fieldname": "goal",
            "label": "Goal",
            "fieldtype": "Link",
            "options": "Goal",
            "reqd": 1
        },
        {
            "fieldname": "contribution_type",
            "label": "Contribution Type",
            "fieldtype": "Link",
            "options": "Contribution Type",
            "reqd": 1
        },
        {
            "fieldname": "karma_points",
            "label": "Karma Points",
            "fieldtype": "Int",
            "reqd": 1,
            "default": "0"
        },
        {
            "fieldname": "unlimited_vacancies",
            "label": "Unlimited Vacancies",
            "fieldtype": "Check",
            "default": "0"
        },
        {
            "fieldname": "minimum_hours",
            "label": "Minimum Hours",
            "fieldtype": "Float",
            "precision": 2,
            "reqd": 1,
            "default": "0"
        },
        {
            "fieldname": "buffer_minutes",
            "label": "Buffer Minutes",
            "fieldtype": "Int",
            "reqd": 1,
            "default": "0"
        },
        {
            "fieldname": "hours",
            "label": "Hours",
            "fieldtype": "Float",
            "precision": 2,
            "reqd": 1,
            "default": "0"
        },
        {
            "fieldname": "minutes",
            "label": "Minutes",
            "fieldtype": "Int",
            "reqd": 1,
            "default": "0"
        },
        {
            "fieldname": "max_hours",
            "label": "Max Hours",
            "fieldtype": "Float",
            "precision": 2,
            "reqd": 1,
            "default": "0"
        },
        {
            "fieldname": "ngo",
            "label": "NGO",
            "fieldtype": "Link",
            "options": "NGO",
            "reqd": 1,
            "in_list_view": 1
        }
    ],
    "permissions": [
        {
            "role": "System Manager",
            "read": 1,
            "write": 1,
            "create": 1,
            "delete": 1,
            "submit": 0,
            "cancel": 0,
            "amend": 0
        }
    ]
}